<div class="container">

  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-signin"}) do |f| %>
      <h2 class="form-signin-heading">Teacher sign in</h2>
      <%= f.error_notification %>
      <%= f.input :email, :required => true, :autofocus => true %>
      <%= f.input :password, :required => true %>
      <%= f.input :password_confirmation, :required => true %>
      <%= f.button :submit, "Sign up", class: "btn btn-primary btn-block"  %>
  <% end %>
  <%= render "teachers/shared/links" %>
  <%= link_to "Return home page", root_path, class: "btn btn-default btn-xs" %>
</div>