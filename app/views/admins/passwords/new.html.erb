<div class="container">
  <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-signin" }) do |f| %>
      <h2 class="form-signin-heading">Forgot your password?</h2>
      <%= f.error_notification %>
      <%= f.input :email, :required => true, :autofocus => true %>
      <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary btn-block" %>
  <% end %>
  <%= render "admins/shared/links" %>
  <%= link_to "Return home page", root_path, class: "btn btn-default btn-xs" %>
</div>