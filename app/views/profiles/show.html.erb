<div class="page-header">
  <h1>
    <%= "Profile Show" %>
    <div class="pull-right">
      <%= link_to 'Edit', profiles_path, class: "btn btn-primary" %>
      <%= link_to 'Back', home_index_path, class: "btn btn-primary" %>
    </div>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt><%= Profile.human_attribute_name(:name) %>:</dt>
  <dd><%= @profile.name %></dd><br>
  <dt><%= Profile.human_attribute_name(:surname) %>:</dt>
  <dd><%= @profile.surname %></dd><br>
  <dt><%= Profile.human_attribute_name(:stackoverflow) %>:</dt>
  <dd><%= @profile.stackoverflow %></dd><br>
  <dt><%= Profile.human_attribute_name(:twitter) %>:</dt>
  <dd><%= @profile.twitter %></dd><br>
  <dt><%= Profile.human_attribute_name(:github) %>:</dt>
  <dd><%= @profile.github %></dd><br>
  <dt><%= Profile.human_attribute_name(:blog) %>:</dt>
  <dd><%= @profile.blog %></dd><br>
  <dt><%= Profile.human_attribute_name(:bitbucket) %>:</dt>
  <dd><%= @profile.bitbucket %></dd><br>
  <dt><%= Profile.human_attribute_name(:bio) %>:</dt>
  <dd><%= @profile.bio %></dd><br>
</dl>
