<!DOCTYPE html>
<html>
<head>
  <title>LesEtoiles</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if current_user %>
    <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
<% elsif current_teacher %>
    <li><%= link_to('Logout', destroy_teacher_session_path, :method => :delete) %></li>
<% elsif current_admin %>
    <li><%= link_to('Logout', destroy_admin_session_path, :method => :delete) %></li>
<% else %>
    <li>
      <%= link_to('Admin Login', new_admin_session_path)  %>
      <%= link_to('Teacher Login', new_teacher_session_path)  %>
      <%= link_to('User Login', new_user_session_path)  %>
    </li>
<% end %>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>
